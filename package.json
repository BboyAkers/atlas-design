{
	"name": "@microsoft/atlas-design",
	"version": "1.0.0",
	"description": "The Atlas Design System used by Microsoft's Developer Relations platform.",
	"private": true,
	"homepage": "https://github.com/microsoft/atlas-design",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint-css": "yarn workspace @microsoft/atlas-css lint",
		"pretty-quick-css": "yarn workspace @microsoft/atlas-css pretty-quick",
		"prettier": "prettier --write \"**/*.{scss,ts,js,json,yml,md}\"",
		"prettier-check": "prettier --check \"**/*.{scss,ts,js,json,yml}\" --loglevel debug"
	},
	"nohoist": [
		"./@microsoft/atlas-css"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/atlas-design"
	},
	"workspaces": [
		"css"
	],
	"keywords": [
		"microsoft",
		"atlas",
		"design-system",
		"css",
		"scss"
	],
	"devDependencies": {
		"@changesets/cli": "^2.14.1",
		"husky": "4.3.0",
		"prettier": "^2.2.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn pretty-quick-css",
			"pre-push": "yarn lint-css"
		}
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"printWidth": 100,
		"trailingComma": "none",
		"arrowParens": "avoid",
		"endOfLine": "auto"
	},
	"author": "Microsoft Corporation",
	"license": "MIT"
}
